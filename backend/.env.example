# Variáveis de Ambiente - Backend AromaNatural

# Porta do Servidor
PORT=5000

# MongoDB Connection String
# Desenvolvimento Local
MONGODB_URI=mongodb://localhost:27017/aromanatural

# Produção (exemplo com MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aromanatural?retryWrites=true&w=majority

# JWT Secret (gerar uma chave segura em produção)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_trocar_em_producao

# JWT Expiration
JWT_EXPIRES_IN=7d

# Admin Credentials (para seed inicial)
ADMIN_EMAIL=admin@aromanatural.com
ADMIN_PASSWORD=@Admin123@

# Environment
NODE_ENV=development

# CORS Origin
CORS_ORIGIN=http://localhost:5173
